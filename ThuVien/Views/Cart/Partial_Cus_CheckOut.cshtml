@model ThuVien.Models.ApplicationUser
@using (Ajax.BeginForm("CheckOut", "Cart", new AjaxOptions
{
    HttpMethod = "POST",
    UpdateTargetId = "load_data",
    OnSuccess = "OnSuccessCO",
    OnFailure = "OnFailure"

}, new { @Id = "myForm" }))
{
    <script>
        function OnSuccessCO(res) {
            if (res.Success) {
                if (res.Code == 1) {
                    location.href = "/Cart/ConfirmCheckOut";
                }
                else {
                    location.href = res.Url;
                }
            }
        }
    </script>
    @Html.HiddenFor(m => m.UserName)
    @Html.HiddenFor(m => m.Id)

    <div class="form-group">
        @Html.LabelFor(m => m.FullName, "Họ và tên", new { @class = "col-md-4 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", @readonly = "readonly" })
            @Html.ValidationMessageFor(x => x.FullName, null, new { @class = "text-danger" })

        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @readonly = "readonly" })
            @Html.ValidationMessageFor(x => x.Email, null, new { @class = "text-danger" })

        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.masv, "Mã SV", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.masv, new { @class = "form-control", @readonly = "readonly" })
            @Html.ValidationMessageFor(x => x.masv, null, new { @class = "text-danger" })

        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.diachi, "Địa chỉ", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.diachi, new { @class = "form-control", @readonly = "readonly" })
            @Html.ValidationMessageFor(x => x.diachi, null, new { @class = "text-danger" })

        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Phone, "SĐT", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @readonly = "readonly" })
            @Html.ValidationMessageFor(x => x.Phone, null, new { @class = "text-danger" })

        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <a href="/cart" class="btn btn-outline-primary">Quay lại</a>
            <button type="submit" class="btn btn-outline-success" id="btnCheckOut">Xác nhận</button>
        </div>
    </div>
