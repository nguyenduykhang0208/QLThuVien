@model ThuVien.Models.ApplicationUser
@{
    ViewBag.Title = "Thông tin tài khoản";
}

<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">

<div class="container" style="margin-top:160px">
    <div class="row">
        <div class="col-md-12">
            <h2>@ViewBag.Title.</h2>

            @using (Html.BeginForm("Edit", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {

                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(x => x.Id)
                @Html.HiddenFor(x => x.UserName)
                @Html.HiddenFor(x => x.PasswordHash)
                @Html.HiddenFor(x => x.SecurityStamp)
                @Html.HiddenFor(x => x.LockoutEnabled)
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(m => m.FullName, "Họ và tên", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.FullName, null, new { @class = "text-danger" })

                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Email, null, new { @class = "text-danger" })

                    </div>
                </div>



                <div class="form-group">
                    @Html.LabelFor(m => m.masv, "Mã SV", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.masv, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.masv, null, new { @class = "text-danger" })

                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.gioitinh, "Giới tính", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(x => x.gioitinh, ViewBag.GioiTinhList as SelectList, "Chọn giới tính", new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.gioitinh, null, new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.diachi, "Địa chỉ", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.diachi, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.diachi, null, new { @class = "text-danger" })

                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(m => m.Phone, "Số điện thoại", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Phone, null, new { @class = "text-danger" })

                    </div>
                </div>



                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <a href="/home" class="btn btn-outline-primary">Quay lại</a>
                        <button type="submit" class="btn btn-outline-success">Lưu</button>
                    </div>
                </div>
            }

        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
